datasource db {
    provider = "postgresql" 
    url      = env("DATABASE_URL")
    schemas  = ["public", "ADMIN"]
}
generator client {
    provider = "prisma-client-js"
    previewFeatures = ["multiSchema"]
}

model user_companies {
  id         String   @id @default(uuid())
  companie   String
  email      String   @unique
  password   String
  name       String?
  role       String
  photo      String?
  address    String?
  cnpj       String?
  telephone  String?
  status     String   @default("active")
  plan       String?
  city       String?
  website    String?
  created    DateTime @default(now())

  @@schema("ADMIN")
}

model  forgot_password{
  id                 String         @id @default(uuid())
  id_user            String
  companie           String
  email              String
  role               String
  code               String
  expiresAt          DateTime
  used               Boolean        @default(false)
  name               String?
  attempts           Int            @default(0)
  update_password    DateTime       @default(now())

  @@schema("ADMIN")
}